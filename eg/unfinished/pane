#!/usr/bin/za -f

cls
pane select "global"

require file 1

pane define "one",   1, 80, 41, 40, "Log",      "sparse"
pane define "two",   1,  1, 10, 79, "Status",   "double"
pane define "three", 12, 1, 30, 79, "",         "square"

pane select "one"
    at 1,1 ; print "1:test"
    at 3,1 ; print "3:test"
    at 5,1 ; print "5:test"


pane select "two"
    for q=1 to 9
        at q,1 ; print "{q}:test"
    endfor


pane select "three"
    for q=1 to 28
        at q,1 ; print "{q}:test"
    endfor

at 10,4
prompt inp "[#1]Name : [#-]"

at 43,1
exit


test_panes="p1\np2\np3"

posx=50
posy=5

foreach t in test_panes
    pane define t,posy,posx,10,50
    posx=posx-10
    posy=posy+12
    pane select t
    # at 1 1 ; print "top-left?\n"
    # at 2 1 ; print "t = {t}\n"
    print "t={t},{posy},{posx}"
endfor

pane select "global"

at 1,1


