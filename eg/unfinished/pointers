#!/usr/bin/za

require 1.0.11

define show()
    for e=0 to 3
        p=z[e]
        println e, " ", z[e], " -> ", *p
        *p=rand(50)
        println "changed to : ",e, " ", z[e], " -> ", *p
    endfor
enddef

struct s_demo
    a bool
    b int
    c ^
endstruct

a1=42.001
a2="test"
a3=true
init a4 s_demo
a4.a=true
a4.b=42
a4.c=^a1

init z mixed 4
z[0]=^a1
z[1]=^a2
z[2]=^a3
z[3]=^a4

show()

println "post show()"
println "a1 : ",a1
println "a2 : ",a2
println "a3 : ",a3
println "a4 : ",a4

