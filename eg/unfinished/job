#!/usr/bin/za

url="https://badplace.info/images"
file="dh-test.png"

println "\n[#bold][#fcyan]Download Test[#default]"

print "[#fred]"

ok=web_download(url+"/"+file,file)

if !ok
    println "Could not download {file}."
    exit 1
endif

when ok
  is true
    | ls -l {file}
    println "\nDownload {file} to ./{file} okay."
    break
  or
    println "Download failed."
    exit 1
endwhen

print 

