#!/usr/bin/za

ip=web_get("https://api.ipify.org/?format=text")

if ip.code != 200
    println "Download error. (code:{=ip.code})"
    exit 1
endif

octet=split(ip.result,".")
println "octets : ",octet

total=sum(list_int(octet))

if total > 100
  println "The sum of {=ip.result} is greater than 100: {total}."
endif


