#!/usr/bin/za

################################################
# test script for some random stuff
################################################

println "\n[#fcyan]Unique Tests\n[#default]\n"

cls
println "[#fyellow]Console Positioning Test\n"
for y = 1 to 20 step 2
    row=y+2
    at row,y
    z=1+(y/2)
    println "[#invert]Test {z} - ({row},{y})"
endfor

println "\n\n[#fcyan]Colour Tests"
println "[#bbcyan][#fbgray][#bold][#blink]Test Font[#default]\n"

println "[#fcyan]PAUSE test[#default]\n"

for x = 1 to 3
    print "Pausing {x} seconds\n"
    print "{x} -- \n"
    pause x*1000
endfor

print

