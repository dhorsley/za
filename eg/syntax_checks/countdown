#!/usr/bin/za

# long loop test - checks base FOR speed.

module "../modules/timing.mod"

#
# START
#

max_count=1000000
input max_count optarg 1

instructions=3
# cmp, inc, endwhile

x=max_count
ts=epoch_nano_time()
while x!=0
    x=x-1
endwhile
println "x:",x
te=epoch_nano_time()
assert(x==0)

#
# END
#

report(ts,te,max_count,instructions)

