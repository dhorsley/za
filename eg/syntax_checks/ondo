#!/usr/bin/za

# ON..DO tests

f=false
t=true
answer=42
s="42"

# output
on !t do print "should not appear\n"
on !f do print "should appear\n"

# assignment

nv=answer
on s=="42" do nv=answer+10
print "? 52 == ",nv,"\n"

# bash command

on answer==42 do | dir /
print

on !f do print dir("/")
print

# break check

for f = 1 to 10
    broke=true
    on f==5 do break
    broke=false
endfor

print "\n{f}  broke==",broke,"\n"


print

