#!/usr/bin/za

bc=3
input bc optarg 1 is "Break Count"

while #b4

    while #b3
        for e=1 to 50 # b2
            when # b1
            has e > 0
                break bc
            endwhen
            println e
        endfor
        println "FOR COMPLETE!"
    endwhile
    println "INNER WHILE COMPLETE!"

endwhile

println "OUTER WHILE COMPLETE"

