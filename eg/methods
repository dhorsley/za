#!/usr/bin/za


struct q
    a int
    b float
    def double()
        self.a*=2
        println "(in double) self kind : ",self.kind
        return self.a
    end
    def get()
        return self.a
    end
    c bool
endstruct

struct w
    a int
    b float
    c bool
    d bool
    def triple()
        self.a*=3
    end
    def get()
        return self.b
    end
endstruct

def title(a); println "\n[#4]{a}[#-]"; end

showdef

var a q
var b w

a.a=42
b.a=10

println "a->",a
println "b->",b

title("calling double")
a.double

title("calling triple")
b.triple

title("setting pi+true in b")
b.b=pi()
b.c=true
println a
println b

title("calling get in distinct structs, (a from a, b from b)")
println "a.get->",a.get
println "b.get->",b.get

title("creating c from a, modifying (b->100,c->true) and calling double")
var c q
c=a
c.b=100f
c.c=true
c.double
println "c->",c
println "c.kind->",c.kind

title("calling double on (c), assigning (c).a to j")
var j q
println "c->",c
j=(c).double
println "j->",j

title("calling triple on struct literal of type w:")
println w(1,1f,false,false)
println "...should fail with nil, currently"
println w(1,1f,false,false).triple


title("same struct type, multiple instances")
var x,y w
println "%#v".format(x)
println "%#v".format(y)
println "setting .b in each."
x.b=42f
y.b=123f
println "x.b->",x.get
println "y.b->",y.get

