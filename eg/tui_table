#!/usr/bin/za

page="pager"
input page optarg 1

t=tui_new()
t.TableSend=page

s=tui_new_style()
border=s.border
border["ih"] = ""
s.border=border
s.hi_bg="[#b1]"
s.hi_fg="[#6]"
s.list=["","[#1]","","[#2]","","[#3]","","[#4]","","",""].list_string

z=$in "data/eg.csv"

t.Data=z
t.Format="csv"
t.Display=[1,3,4,5,7].list_int
t.Headers=true
t.Row,t.Col=[2,10]
t.Height,t.Width,t.Title=[30,120,".csv to table"]

cls
aos=tui_table(t,s)

if page=="pager"
    t.tui_clear
else
    println aos
endif

# array-of-struct

t.Title="struct to table"

struct ts
    index int
    i int
    b bool
    f float
es

var ar []any

for e=0 to 99
    ar[e]=ts(e,rand(100),itob(rand(2)-1),randf(100))
ef
t.Data=ar
t.Format="aos"
t.Display=[0,1,2,3].list_int
s.list=["[#b2][#6]","[#2]","[#4]","[#5]"].list_string

aos=tui_table(t,s)
if page=="pager"
    t.tui_clear
else
    println aos
endif

at term_h(),1
cursoron()

