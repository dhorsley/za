#!/usr/bin/za

# file handling functions

enum errors (okay,not_found,file_open)

fn="/usr/share/dict/american-english"

case release_id()
is "fedora"
    fn="/usr/share/dict/words"
ec

on not is_file(fn) do exit errors.not_found,"File not found."

fhand=fn.fopen("r")
on fhand==nil do exit errors.file_open,"Could not open dictionary file."

while not feof(fhand)
    println fread(fhand,"\n")
ew
#fclose(fhand)
fhand.fclose

exit errors.okay

