#!/usr/bin/za

doc `
    simple quick sort
`

define qs(a)
    on len(a) <= 1 do return a
    return qs(a[1:] ?> `# <= a[0]`) + a[0:1] + qs(a[1:] ?> `# > a[0]`)
end


# MAIN

epoch_nano_time().seed

reps=100
input reps optarg 1

var arr [1000] int

for f=1 to reps
    for e=0 to arr.len - 1
        arr[e]=rand(100000)
    ef
    r=arr.qs
    println "{f} low {=r[0]} high {=r[r.len-1]}"
ef


