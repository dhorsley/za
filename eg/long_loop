#/usr/bin/za

# long loop test - checks base FOR speed.

module "./modules/timing.mod"

max_count=25000000
input max_count optarg 1

ts=epoch_nano_time()
for x=1 to max_count
    nop ; nop ; nop ; nop
endfor
println "x: ",kind(x)," ",x
te=epoch_nano_time()
assert x==max_count

#
# END
#

# ops = 4*nop+1*endfor  ( FOR statement executes once only )
timing.report(ts,te,max_count,5)

