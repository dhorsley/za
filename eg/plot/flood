#!/usr/bin/za

# concentric circles

#
# something for checking your virtual machine
# isn't dragging it's heels...
#


max_reps=1
input max_reps optarg 1

cursoroff()

cls
h=term_h()
w=term_w()

cx=int(w/2)
cy=int(h/2)

seed(epoch_nano_time())


for nr=1 to max_reps

    for e=0 to cy-1

        cb="[#b{=rand(7)}]  "
        for r=0 to 359
            px=cx-1+2*e*sin(r)
            py=1.0+cy+e*cos(r)
            at py,px
            print cb
        endfor

    endfor

endfor

cursoron()
at h-3,1; print "[#default]"
at h-2,1; println "h,w={h},{w}"

