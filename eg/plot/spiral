#!/usr/bin/za


define waitkey()
    keypress()
    setglob quit=true
end

define draw()
    x = 2*theta * cos(theta/pi)/8
    y = theta * sin(theta/pi)/8
    px=cx+x; py=cy+y
    if px>0 and py>0 and px<width and py<height and not (x==0 and y==0)
        at py,px; print "[#"+int(c)+"]o"
    endif
    setglob theta = theta + rotation
    on x > width/2.0 do setglob theta = 0.0
    setglob c=c+crate
    on c>7 do setglob c=rand(7).float
end

var rotation  float
var theta     float
var c         float

epoch_nano_time().seed

rotation = 0.05
width=term_w()
height=term_h()
cx=width/2
cy=height/2
pi=pi()
c=rand(7).float
crate=0.01
bounce=0.012
maxrot=13.0

quit=false
async whand waitkey()

while !quit
    cls
    print "[#bold]"
    theta=0.0
    for e=0 to 400
        cursoroff()
        draw()
    endfor
    rotation+=bounce
    on rotation>maxrot or rotation<0.03 do bounce=-bounce
endwhile
cursoron()
at height-1,1

showdef

