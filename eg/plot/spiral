#!/usr/bin/za


define waitkey()
    keypress()
    @ quit=true
end

var rotation  float
var theta     float
var c         float

seed(-1)

rotation = 1f
max_draw=4500
width=term_w()
height=term_h()
cx=width/2
cy=height/2
pi=pi()
c=rand(7).as_float
c_rate=0.025
bounce=0.012
maxrot=13.0

quit=false
async nil waitkey()

while !quit
    cls
    print "[#"+as_int(c)+"][#bold]"
    theta=0.0
    cursoroff()
    for e=0 to max_draw
        x = 2*theta * cos(theta/pi)/8
        y = theta * sin(theta/pi)/8
        px=cx+x; py=cy+y
        on px>0 and py>0 and px<width and py<height and not (x==0 and y==0) do at py,px,"o"
        theta = theta + rotation
        on x > width/2.0 do theta = 0.0
    endfor
    c+=c_rate
    on c>8 do c=rand(7).as_float
    rotation+=bounce
    on rotation>maxrot or rotation<0.03 do bounce=-bounce
endwhile

cursoron()
at height-1,1


