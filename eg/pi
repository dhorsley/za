#!/usr/bin/za

spaceat=10
digs=65
input digs optarg 1 is "Number of digits to calculate."

var q,t,k bigi   = 1n
var l,n bigi     = 3n
var l bigi       = 3n
var r,nn,nr bigi = 0n
spacecur=-1
iter=0

println "Iterated Value:"

while digs>0
    iter++        
    if 4*q+r-t < n*t
        print n
        on spacecur==-1 do print "."
        digs--
        if ++spacecur == 10
            print " "
            spacecur=0
        ei
        nr=10*(r-n*t)
        n=10*(3*q+r)/t-10*n
        q=q*10
        r=nr
    else
        nr=(2*q+r)*l
        n=(q*7*k+2+r*l)/(t*l)
        q=q*k
        t*=l
        l=l+2
        k=k+1
        r=nr
    ei
ew
println "\n[#6]Iterations : {iter}[#-]"
println format("[#4]System Pi:\n%.40f[#-]",pi())

