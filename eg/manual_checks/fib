#!/usr/bin/za

define fib(n)
    @ memo["calls"] = memo["calls"]+1
    if glob_key("memo",as_string(n))
        m=memo[n]
    else
        m=fib(n-2)+fib(n-1)
        @ memo[n] = m
    endif
    return m
end

define signum(x)
    on x<0 do return -1
    on x>0 do return 1
    return 0
end

# main

memo["calls"]=0
memo[0]=0
memo[1]=1
memo[2]=1

input x param 1
#println fib(x)
#println "Calls : ",memo["calls"]

for x=1 to x
    on signum(fib(x))==-1 do break
    println "fib({x}) -> {=fib(x)}"
endfor


