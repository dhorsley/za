
struct car
    manufacturer    string
    model           string
    year            int
    isSafe          bool
es

brum=car("Datsun","Cherry",1985,false)

define safe(p1,p2,p3)
    println "Safe:"
    println "       manu  {=self.manufacturer}"
    println "       model {=self.model}"
    println "       year  {=self.year}"
    println "       safe  {=self.isSafe}"
    println "      arg-p1 {=p1}"
    println "      arg-p2 {=p2}"
    println "      arg-p3 {=p3}"
    self.year=2000
    self.isSafe=true
    return self
end

nbrum=brum.safe("blue","red","green")
println "new brum: %#v".format(nbrum)

