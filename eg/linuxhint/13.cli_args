#!/usr/bin/za

#
# example call: 
#   za 13.cli_args one two "three plus" four
#

println "Argument count : ",argc()
println "All args : ",argv()

input arg1 optarg 1
input arg2 optarg 2

println "Arg 1 : ",arg1
println "Arg 2 : ",arg2

on argc()==0 do exit

println "Arg loop : "
foreach a in argv()
    println "> ",key_a," : ",a
endfor

