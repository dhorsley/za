#!/usr/bin/za

cls
prompt dir "Enter directory name : "
at 3,1

on match(dir,`/`)  do exit 1      #
on match(dir,`\.`)  do exit 1     # any change in path causes exit
on match(dir,`\.\.`) do exit 1    #

if is_file(dir) || is_dir(dir)
    println "file already exists."
    exit 2
endif

| mkdir {dir}
| ls -lh {dir}
| rmdir -v {dir}

