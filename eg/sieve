#!/usr/bin/za

doc `
    Simple Sieve of Eratosthenes
`

var num,i,j int

input num optarg 1

var primes [num+1] int

for i = 2 to num
    primes[i] = i
endfor


i = 2
while i*i <= num

    if primes[i] != 0
        for j=2 to num-1
            if primes[i]*j > num
                break
            else
                primes[primes[i]*j]=0
            endif
        endfor 
    endif

    i++

endwhile


for i = 2 to num
    on primes[i]!=0 do println "%d".format(primes[i])
endfor


