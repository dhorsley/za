#!/usr/bin/za

doc `

struct tui
    row     int
    col     int
    height  int
    width   int
    action  string
    options []
    cursor  string
    title   string
    prompt  string
es

struct tui_style
    bg      string
    fg      string
    border  map[string]string
    fill    bool
    wrap    bool
es

`

cursoroff()
seed(-1)

t=tui_new()
s=tui_new_style()
t.row=rand(term_h()-20)
t.col=rand(term_w()-50)
t.height=term_h().rand
t.width=30
t.title="test panel"

border=s.border
bg=0; fg=1
for ,bg==fg,
    bg,fg=[rand(7),rand(7)]
endfor
border["bg"]=bg.as_string
border["fg"]=fg.as_string
s.border=border
s.fill=true

tui_screen(1)
tui_box(t,s)

# cleanup
keypress()
tui_screen(0)
cursoron()
exit

menu=tui_new()
menu.x,menu.y,menu.action = [10,10,"hcheck"]
menu.options=["one","two","three"]
menu.title  ="test check box"
menu.prompt ="Please select an option:"
menu_style=tui_new_style()

println menu
result=tui(menu)
println result

