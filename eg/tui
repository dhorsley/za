#!/usr/bin/za

doc `

struct tui
    row     int
    col     int
    height  int
    width   int
    action  string
    options []
    cursor  string
    title   string
    prompt  string
es

struct tui_style
    bg      string
    fg      string
    border  map[string]string
    wrap    bool 
es

`

cls
t=tui_new()
s=tui_new_style()
for e=0 to 999
    t.row=rand(term_h()-20)
    t.col=rand(term_w()-50)
    t.height=term_h().rand
    t.width=30
    tui_box(t,s)
endfor
exit

menu=tui_new()
menu.x,menu.y,menu.action = [10,10,"hcheck"]
menu.options=["one","two","three"]
menu.title  ="test check box"
menu.prompt ="Please select an option:"
menu_style=tui_new_style()

println menu
result=tui(menu)
println result

