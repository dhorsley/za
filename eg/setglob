#!/usr/bin/za

permit("uninit",true)

struct t
    a int
    b bool
    c float
    d string
endstruct

define q()
    setglob a=true
    setglob b["test"]=42
    println "SET LM1->"
    setglob m["one"].d="teststring"
end

define w()
    setglob a=!a
end

init z t
m["one"]=z


println "pre-call"
println "a:",a

println "call"
q()

println "post-call"

println "m:",m
println "a:",a
println "b:",b
println "z:",z

println "negate a call"
w()
println "a:",a

