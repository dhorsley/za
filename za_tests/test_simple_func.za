#!/usr/bin/za
# Test simple function call

println "Defining test function..."

define test(name, condition)
    println "Inside test function"
    if condition
        println "Condition was true"
    else
        println "Condition was false"
    endif
enddef

println "test function defined"

println "Calling test with true..."
test("test1", true)

println "Calling test with false..."
test("test2", false)

println "Calling test with 1 == 1..."
test("test3", 1 == 1)

println "Calling test with 2 == 1..."
test("test4", 2 == 1)

x = 5
println "Calling test with x == 5..."
test("test5", x == 5)

println "All tests completed"
