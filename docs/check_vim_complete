#!/usr/bin/za

#synmatches="$(grep "^syntax" za.vim | egrep -o '\(.*\)' | grep -o '\\(.*)' | tr '\\$+(|)' ' ' | tr -s ' \n' | tr ' ' '\n' | grep -v "^[s]*$")"
#kc=$(echo "$synmatches" | wc -l)

#echo -n "Keywords: " ; echo $synmatches
#echo "Keyword matches : ${kc}"

funclist=[]
foreach f in func_inputs()
    append_to(ref funclist,key_f)
endfor
funclist=funclist.sort.join("\n")

doclist= $in "za.vim" . grep(`^syntax .*_functions.*\)`) . col(2,")")
foreach e in doclist
    doclist[key_e]=e.field(1,"\\")
endfor
doclist=doclist.sort.join("\n")

a=${mktemp}
b=${mktemp}

funclist $out a
doclist  $out b

diff=|diff --suppress-common-lines -y "{a}" "{b}"

if ! diff.okay
    println "[#2]mismatch[#-]"
    println "%-47s%40s".format("[#5]Za help list[#-]","[#5]Vim list[#-]")
    println diff.out
else
    println "No differences."
endif

delete(a)
delete(b)


